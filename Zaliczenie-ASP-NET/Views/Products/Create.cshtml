@model Products

<form method="post">
	<div class="border-bottom p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create product</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Category"></label>
			<input asp-for="Category" class="form-control" />
			<span asp-validation-for="Category" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Info"></label>
			<input asp-for="Info" class="form-control" />
			<span asp-validation-for="Info" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Price"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Products" asp-action="Index" class="btn-primary btn" style="width:150px">Back to list</a>
	</div>
</form>



@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}