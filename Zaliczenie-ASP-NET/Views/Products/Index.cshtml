@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class='container p-3'>
    <div class='row pt-4'>
        <div class='col-6'>
            <h2 class='text-primary'>Products</h2>
        </div>
        <div class='col-6 text-end'>
            <a asp-controller="Products" asp-action="Create" class="btn-primary btn"><i class="bi bi-plus-circle" style="margin-right:10px"></i>Add new product</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Display order
            </th>
            <th>
                Name
            </th>
            <th>
                Category
            </th>
             <th>
                Addtional information
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="18%">
                    @obj.DisplayOrder
                </td>
                <td width="18%">
                    @obj.Name
                </td>
                <td width="18%">
                    @obj.Category
                </td>
                <td width="18%">
                    @obj.Info
                </td>
                <td width="18%">
                    @obj.Price
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2" ><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2" ><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>